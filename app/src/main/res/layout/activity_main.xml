<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#1a1a1a"
    android:id="@+id/rowsContainer">
    
    <LinearLayout
        style="@style/rowStyle"
        android:columnCount="5"
        android:weightSum="5"
        android:alignmentMode="alignMargins"
        android:orientation="horizontal">

        <TextView
            style="@style/CharacterBox"
            android:text="P"/>
        <TextView
            style="@style/CharacterBox"
            android:text="O"/>
        <TextView
            style="@style/CharacterBox"
            android:text="R"/>
        <TextView
            style="@style/CharacterBox"
            android:text="D"/>
        <TextView
            style="@style/CharacterBox"
            android:text="S"/>

    </LinearLayout>

    <LinearLayout
        style="@style/rowStyle">

        <TextView
            style="@style/CharacterBox"
            android:text="A"/>
        <TextView
            style="@style/CharacterBox"
            android:text="L"/>
        <TextView
            style="@style/CharacterBox"
            android:text="E"/>
        <TextView
            style="@style/CharacterBox"
            android:text="R"/>
        <TextView
            style="@style/CharacterBox"
            android:text="T"/>
    </LinearLayout>

    <LinearLayout
        style="@style/rowStyle">

        <TextView
            style="@style/CharacterBox"
            android:text="S"/>
        <TextView
            style="@style/CharacterBox"
            android:text="H"/>
        <TextView
            style="@style/CharacterBox"
            android:text="E"/>
        <TextView
            style="@style/CharacterBox"
            android:text="L"/>
        <TextView
            style="@style/CharacterBox"
            android:text="F"/>
    </LinearLayout>

    <LinearLayout
        style="@style/rowStyle">

        <TextView
            style="@style/CharacterBox"
            android:text="Y"/>
        <TextView
            style="@style/CharacterBox"
            android:text="O"/>
        <TextView
            style="@style/CharacterBox"
            android:text="U"/>
        <TextView
            style="@style/CharacterBox"
            android:text="N"/>
        <TextView
            style="@style/CharacterBox"
            android:text="G"/>
    </LinearLayout>

    <LinearLayout
        style="@style/rowStyle">

        <TextView
            style="@style/CharacterBox"
            android:text="P"/>
        <TextView
            style="@style/CharacterBox"
            android:text="H"/>
        <TextView
            style="@style/CharacterBox"
            android:text="O"/>
        <TextView
            style="@style/CharacterBox"
            android:text="N"/>
        <TextView
            style="@style/CharacterBox"
            android:text="E"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Check"
        android:onClick="checkGuess"/>

    <!-- Keyboard -->


</LinearLayout>